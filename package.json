{
  "version": "10.4.0",
  "name": "@simonkberg/eslint-config-react",
  "description": "A shareable eslint config for my React projects",
  "main": "index.js",
  "scripts": {
    "test": "yarn prettier:check && eslint . && jest",
    "prettier:check": "yarn prettier --list-different '**/*.js'",
    "prettier:format": "yarn prettier --write '**/*.js'",
    "precommit": "lint-staged",
    "prerelease": "yarn test",
    "release": "standard-version -s"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simonkberg/eslint-config-react.git"
  },
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonkberg/eslint-config-react/issues"
  },
  "homepage": "https://github.com/simonkberg/eslint-config-react#readme",
  "engines": {
    "node": ">=6.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": "./index.js"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@simonkberg/eslint-config": "^7.2.0",
    "babel-eslint": "^7.2.3",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-react": "^7.2.1"
  },
  "peerDependencies": {
    "eslint": ">=3.19.0"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "standard-version": "^4.3.0"
  },
  "files": [
    "index.js"
  ]
}
